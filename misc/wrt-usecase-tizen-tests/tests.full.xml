<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-usecase-tizen-tests" category="Runtime_UseCase_Tizen" launcher="xwalk">
    <set name="usecase">
      <testcase purpose="Validate if the web app can show 'Dies ist eine Testseite in Deutsch' Test when settings language is set to Deutsch" type="Functional" status="approved" component="Crosswalk usecase" execution_type="manual" priority="P0" id="Crosswalk_I18n_TestDe">
        <description>
          <pre_condition>
            1.Make sure Crosswalk application is launched.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_I18n_TestDe.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support to install and uninstalled WebApp" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure the webapp wrt-system-event-tests is available.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_WebApp_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support to install, launch and uninstall Widget" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_Wiget_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure the wgt tct-2dtransforms-css3-tests.wgt available.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Wiget_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if the webapp updated when the one version is higher then original" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_Package_Update_OneVersionHigher">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Package_Update_OneVersionHigher.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Check launch web app via command line" type="Functional" status="approved" component="Crosswalk Runtime Basicfeature" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Launch_CommandLine">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed.
            1.Make sure webapp is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_WebApp_Launch_CommandLine.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support '--fullscreen' flag successfully" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Feature_Flags_fullscreen">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Feature_Flags_fullscreen.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support '--list-feature-flags' flag successfully" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Feature_Flags_list-feature-flags">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Feature_Flags_list-feature-flags.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support installing apps in the 'run-as-service' mode" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Run_As_Service_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
            2.Make sure the "SysApps_DeviceCapabilities.xpk" package is available
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Run_As_Service_Install.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support uninstalling apps in the 'run-as-service' mode" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Run_As_Service_Uninstall">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
            2.Make sure the "SysApps_DeviceCapabilities.xpk" package is available
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Run_As_Service_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk can launch apps in the 'run-as-service' mode" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Run_As_Service_Launch">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
            2.Make sure the "SysApps_DeviceCapabilities.xpk" package is installed
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Run_As_Service_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support 'run-as-service' mode" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Run_As_Service_Mode">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed
            2.Make sure the "SysApps_DeviceCapabilities.xpk" package is available
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Run_As_Service_Mode.html</test_script_entry>
