      </testcase>
      <testcase purpose="Validate Crosswalk install and unistall successfull" type="Functional" status="approved" component="Crosswalk Runtime Binary" execution_type="manual" priority="P0" id="Crosswalk_Binary_Install">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is push device.
          </pre_condition>
          <test_script_entry>/opt/wrt-usecase-tizen-tests/usecase/Crosswalk_Binary_Install.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
