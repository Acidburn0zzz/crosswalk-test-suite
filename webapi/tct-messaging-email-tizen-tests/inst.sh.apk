#!/bin/bash

#parse params
USAGE="Usage: ./inst.sh [-i] [-u]
  -i install apk and config environment
  -u uninstall apk and remove source file
[-i] option was set as default."

#TODO:update PACKAGENAME for each suite,pay attention to use '_'
PACKAGENAME=tct_messaging_email_tizen_tests
SUITENAME=`echo $PACKAGENAME |sed 's/_/-/g'`
RESOURCE_DIR=/home/app/content

function installpkg(){
extend=".apk"
ls |grep x86.apk  > /dev/null 2>&1 && extend="_x86.apk"
ls |grep arm.apk  > /dev/null 2>&1 && extend="_arm.apk"

adb install $PACKAGENAME$extend

### copy media files ###
adb shell mkdir -p $RESOURCE_DIR/Images/
adb shell mkdir -p $RESOURCE_DIR/Sounds/
adb shell cp -f $RESOURCE_DIR/tct/opt/$SUITENAME/mediasrc/webapi-tizen-messaging-test_image.jpg  $RESOURCE_DIR/Images/
adb shell cp -f $RESOURCE_DIR/tct/opt/$SUITENAME/mediasrc/webapi-tizen-messaging-test_noise.mp3  $RESOURCE_DIR/Sounds/

#TODO: copy resource
#eg:adb push xx $RESOURCE_DIR
}

function uninstallpkg(){
adb uninstall org.xwalk.$PACKAGENAME

### remove media files ###
adb shell rm -f $RESOURCE_DIR/Images/webapi-tizen-messaging-test_image.jpg &>/dev/null
adb shell rm -f $RESOURCE_DIR/Sounds/webapi-tizen-messaging-test_noise.mp3 &>/dev/null

#TODO: remove resource
#eg:adb shell rm -rf $RESOURCE_DIR/xx
adb shell rm -rf $RESOURCE_DIR/tct/opt/$SUITENAME &>/dev/null
}

case "$1" in
    -h|--help) echo "$USAGE"
               exit ;;
    ""|-i) installpkg;;
    -u) uninstallpkg;;
    *) echo "Unknown option: $1"
       echo "$USAGE"
       exit ;;
esac
