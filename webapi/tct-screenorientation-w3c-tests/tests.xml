<test_definition>
  <suite category="W3C/HTML5 APIs" launcher="xwalk" name="tct-screenorientation-w3c-tests">
    <set name="ScreenOrientation">
      <testcase component="WebAPI/Device/The Screen Orientation API" execution_type="auto" id="Screen_exists" purpose="Check if the window.screen exists">
