          <test_script_entry>/opt/tct-screenorientation-w3c-tests/screenorientation/Screen_attributes_tests.html?total_num=10&amp;locator_key=id&amp;value=5</test_script_entry>
        </description>
      </testcase>
      <testcase component="WebAPI/Device/The Screen Orientation API" execution_type="auto" id="Screen_orientation_exists" purpose="Check if screen.orientation attribute exists">
