<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk Runtime Binary" name="wrt-rtbinauto-tizen-tests">
    <set name="rtbinauto">
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Mode" purpose="Validate Crosswalk support 'run-as-service' mode">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Mode.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Install" purpose="Validate use xwalk and xwalkctl install the same app">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Uninstall" purpose="Validate Crosswalk support uninstalling apps in the 'run-as-service' mode">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed.
          </pre_condition>
          <test_script_entry>/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_CheckDB" purpose="Validate use run as service install webapp the db if correct">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is download to local.
          </pre_condition>
          <test_script_entry>/opt/usr/media/tct/opt/wrt-rtbinauto-tizen-tests/rtbinauto/Crosswalk_Run_As_Service_CheckDB.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
