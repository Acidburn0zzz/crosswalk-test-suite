<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk Runtime Binary" name="wrt-rtbin-tizen-tests">
    <set name="rtbin">
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Mode" purpose="Validate Crosswalk support 'run-as-service' mode">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Run_As_Service_Mode.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Install" purpose="Validate use xwalk and xwalkctl install the same app">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Run_As_Service_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_Uninstall" purpose="Validate Crosswalk support uninstalling apps in the 'run-as-service' mode">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Run_As_Service_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Runtime Binary" execution_type="auto" id="Crosswalk_Run_As_Service_CheckDB" purpose="Validate use run as service install webapp the db if correct">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Run_As_Service_CheckDB.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk/Runtime/Basicfeature" execution_type="auto" id="Crosswalk_Tizen_Binary_Install" purpose="Check the xwalk could be install successfully">
        <description>
          <test_script_entry>app_user@/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Tizen_Binary_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk/Runtime/Basicfeature" execution_type="auto" id="Crosswalk_Tizen_Binary_Uninstall" purpose="Check the xwalk could be uninstall successfully">
        <description>
          <test_script_entry>app_user@/opt/wrt-rtbin-tizen-tests/rtbin/Crosswalk_Tizen_Binary_Uninstall.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
