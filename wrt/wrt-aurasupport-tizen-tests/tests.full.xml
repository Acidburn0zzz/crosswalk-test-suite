<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-aurasupport-tizen-tests" category="Aura_support" launcher="xwalk" >
    <set name="aurasupport">
      <testcase purpose="Validate if  web app could be termined in task manager" type="Functional" status="designed" component="Aura Support" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Integration_Termined">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure there some webapps are available.
          </pre_condition>
          <test_script_entry>/opt/wrt-aurasupport-tizen-tests/aurasupport/Crosswalk_WebApp_Integration_Termined.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support web apps could be switch successfully" type="Functional" status="designed" component="Aura Support" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Integration_Switch">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure there some webapps are available.
          </pre_condition>
          <test_script_entry>/opt/wrt-aurasupport-tizen-tests/aurasupport/Crosswalk_WebApp_Integration_Switch.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
